# os platform
PLATFORM=`uname| tr '[:upper:]' '[:lower:]'`

# directory of script
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# are we using a symlink?
LINK=`readlink "$DIR/fsh"`
if [ $? == 0 ]; then
    # yes we are, then update DIR...
    REL=`dirname "$LINK"`
    DIR="${DIR}/${REL}"
fi

if [ "${PLATFORM}" == "darwin" ]; then
    BIN="$DIR/../dist/IBM Cloud Functions Shell-${PLATFORM}-x64/IBM Cloud Functions Shell.app/Contents/MacOS/IBM Cloud Functions Shell"

elif [ "${PLATFORM}" == "win32" ] || [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ] || [ "$(expr substr $(uname -s) 1 10)" == "MINGW64_NT" ]; then
    BIN="$DIR/../dist/IBM Cloud Functions Shell-win32-x64/IBM Cloud Functions Shell.exe"

else
    BIN="$DIR/../dist/IBM Cloud Functions Shell-${PLATFORM}-x64/IBM Cloud Functions Shell"
fi

"$BIN" --fsh-headless $@
